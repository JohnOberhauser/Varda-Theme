(defvar power_options_reveal false)

(defwidget powerOptions []
    (eventbox
        :onhover "${eww} update power_options_reveal=true"
        :onhoverlost "${eww} update power_options_reveal=false"
        (box
            :class "powerOptionsContainer"
            :space-evenly "false"
            :orientation "h"
            :spacing "0"
            :halign "center"
            (box
                (button
                    :class "power_option"
                    :onclick "hyprctl dispatch exit 0"
                    ""
                )
                (button
                    :class "power_option"
                    :onclick "${eww} update power_options_reveal=false && $HOME/.config/hypr/scripts/powerOptions/lock.sh &> /dev/null &"
                    ""
                )
                (button
                    :class "power_option"
                    :onclick "reboot"
                    "ﰇ"
                )
                (button
                    :class "power_option"
                    :onclick "shutdown now"
                    "⏻"
                )
            )
        )
    )
)