(defpoll volume_icon :interval "1h" "$HOME/.config/hypr/scripts/audio/getVolumeIcon.sh")

(defwidget volume []
    (box
        :class "rightSideModule"
        :space-evenly "false"
        :orientation "h"
        :spacing "0"
        (button
            :class "rightSideIcon"
            :onclick "$HOME/.config/hypr/scripts/audio/swapOutput.sh"
            volume_icon
        )
    )
)