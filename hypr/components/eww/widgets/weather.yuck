(defpoll weather :interval "10m" "$HOME/.config/hypr/scripts/weather/getWeather.sh")

(defwidget weather []
    (box
        :orientation "v"
        :space-evenly false
        (label
            :text "Weather"
            :class "weatherLabel"
            :xalign 0.5
        )
        (label
            :text weather
            :class "weather"
            :xalign 0.5
        )
    )
)