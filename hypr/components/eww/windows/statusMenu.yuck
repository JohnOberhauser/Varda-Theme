(include "./widgets/weather.yuck")
(include "./widgets/calendar.yuck")
(include "./widgets/date.yuck")

(defwindow statusMenuWindow
    :class "statusMenuWindow"
    :monitor 0
    :geometry (geometry
        :x "0%"
        :y "10px"
        :anchor "top center"
    )
    (box
        :halign "center"
        :valign "center"
        :space-evenly false
        :orientation "v"
        (date)
        (box
            :orientation "v"
            :halign "center"
            :valign "center"
            :space-evenly false
            (weather)
            (calendarContainer)
        )
    )
)