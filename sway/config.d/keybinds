set $wsa1 "I"
set $wsa2 "II"
set $wsa3 "III"
set $wsa4 "IV"
set $wsa5 "V"

set $wsb1 "B1"
set $wsb2 "B2"
set $wsb3 "B3"
set $wsb4 "B4"
set $wsb5 "B5"

set $wsc1 "M"

### Key bindings
#
# Basics:
#
    # Start a terminal
    bindsym $mod+Return exec $term

    # Kill focused window
    bindsym $mod+q kill

    # Start your launcher
    #bindsym $mod+Space exec rofi -show run
    #bindsym $mod+Space exec /home/john/.config/sway/searchApplications.sh
    bindsym $mod+Space exec kmenu

    # Drag floating windows by holding down $mod and left mouse button.
    # Resize them with right mouse button + $mod.
    # Despite the name, also works for non-floating windows.
    # Change normal to inverse to use left mouse button for resizing and right
    # mouse button for dragging.
    floating_modifier $mod normal

    # Reload the configuration file
    bindsym $mod+Shift+c reload

    # Exit sway (logs you out of your Wayland session)
    bindsym $mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -b 'Yes, exit sway' 'swaymsg exit'
#
# Sound:
#
    bindsym XF86AudioRaiseVolume exec /home/john/.config/sway/volumeUp.sh
    bindsym XF86AudioLowerVolume exec /home/john/.config/sway/volumeDown.sh
    bindsym XF86AudioMute exec /home/john/.config/sway/toggleMute.sh
    bindsym XF86AudioNext exec playerctl next
    bindsym XF86AudioPrev exec playerctl previous
    bindsym XF86AudioPlay exec playerctl play-pause

#
# Screenshots:
#
    #everything
    bindsym Print exec grim $(xdg-user-dir PICTURES)/screenshots/$(date +'%s_grim.png')
    #everything include cursor
    bindsym $mod+F5 exec grim -c $(xdg-user-dir PICTURES)/screenshots/$(date +'%s_grim.png')
    #selected window (not working, works in terminal)
    bindsym $mod+Alt+Print exec grim -g "$(swaymsg -t get_tree | jq -j '.. | select(.type?) | select(.focused).rect | "\(.x),\(.y) \(.width)x\(.height)"')" $(xdg-user-dir PICTURES)/screenshots/$(date +'%s_grim.png')
    #selected area
    bindsym $mod+Shift+Print exec grim -g "$(slurp)" $(xdg-user-dir PICTURES)/screenshots/$(date +'%s_grim.png')
#
# Moving around:
#
    # Move your focus around
    bindsym $mod+Alt+KP_6 focus right
    bindsym $mod+Alt+KP_4 focus left
    bindsym $mod+Alt+KP_2 focus down
    bindsym $mod+Alt+KP_8 focus up

    # Move the focused window
    bindsym $mod+KP_6 move right
    bindsym $mod+KP_4 move left
    bindsym $mod+KP_2 move down
    bindsym $mod+KP_8 move up
    bindsym $mod+KP_1 exec $HOME/.config/sway/moveLeftVertical.sh
    bindsym $mod+KP_3 exec $HOME/.config/sway/moveRightVertical.sh
    bindsym $mod+Alt+KP_1 exec $HOME/.config/sway/moveLeftVertical.sh
    bindsym $mod+Alt+KP_3 exec $HOME/.config/sway/moveRightVertical.sh

#
# Workspaces:
#
    # Cycle through workspaces
    bindsym $mod+Ctrl+KP_9 exec /home/john/.config/sway/workspace_move_right.sh $wsa1 $wsa2 $wsa3 $wsa4 $wsa5 $wsb1 $wsb2 $wsb3 $wsb4 $wsb5
    bindsym $mod+Ctrl+KP_7 exec /home/john/.config/sway/workspace_move_left.sh $wsa1 $wsa2 $wsa3 $wsa4 $wsa5 $wsb1 $wsb2 $wsb3 $wsb4 $wsb5

    # Move focused container to next workspace
    bindsym $mod+Ctrl+KP_6 exec /home/john/.config/sway/container_move_right.sh $wsa1 $wsa2 $wsa3 $wsa4 $wsa5 $wsb1 $wsb2 $wsb3 $wsb4 $wsb5
    bindsym $mod+Ctrl+KP_4 exec /home/john/.config/sway/container_move_left.sh $wsa1 $wsa2 $wsa3 $wsa4 $wsa5 $wsb1 $wsb2 $wsb3 $wsb4 $wsb5

    # Move to special workspace for gui startup programs
    bindsym $mod+m workspace $wsc1
#
# Layout stuff:
#
    # You can "split" the current object of your focus with
    # $mod+b or $mod+v, for horizontal and vertical splits
    # respectively.
    bindsym $mod+b splith
    bindsym $mod+v splitv
    bindsym $mod+n split

    # Switch the current container between different layout styles
    #bindsym $mod+s layout stacking
    #bindsym $mod+w layout tabbed
    #bindsym $mod+e layout toggle split

    # Make the current focus fullscreen
    bindsym $mod+KP_5 fullscreen

    # Toggle the current focus between tiling and floating mode
    # When the modifier key is held down, you may hold left click to move windows,
    # and right click to resize them.
    bindsym $mod+f floating toggle

    # Move focus to the parent container
    bindsym $mod+a focus parent
#
# Scratchpad:
#
    # Sway has a "scratchpad", which is a bag of holding for windows.
    # You can send windows there and get them back later.

    # Move the currently focused window to the scratchpad
    bindsym $mod+g move scratchpad

    # Show the next scratchpad window or hide the focused scratchpad window.
    # If there are multiple scratchpad windows, this command cycles through them.
    bindsym $mod+Alt+g scratchpad show
#
# Resizing containers:
#
mode "resize" {
    # left will shrink the containers width
    # right will grow the containers width
    # up will shrink the containers height
    # down will grow the containers height

    # Ditto, with arrow keys
    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"
